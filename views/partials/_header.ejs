<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (user) { %>
      <div class="d-inline-flex" style="position: absolute; right: 10px">
          <h6 class="text-white-50" style="margin-top: auto">Logged In As: <%= user.email %></h6>
          <form class="form-inline" action="/logout" method="POST">
            <button type="submit" class="btn btn-light" style="margin-left: 20px;">Logout</button>
          </form>
      </div>
      <% } else { %>
        <div class="d-inline-flex" style="position: absolute; right: 10px">
          <form class="form-inline" action="/register" method="GET">
            <button type="submit" class="btn btn-success" style="margin-left: 20px;">Register</button>
          </form>
          <form class="form-inline" action="/login" method="GET">
            <button href="/login" type="submit" class="btn btn-success" style="margin-left: 20px;">Login</button>
          </form>
      </div>
      <% } %>
    </div>
  </nav>
</header>
